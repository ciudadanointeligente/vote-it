<p id="notice"><%= notice %></p>

<h2 class="page-header"><%= @vote.subject %> <small><%= @vote.bill %></small></h2>

<table class="table">
  <thead></thead>
  <tbody>
    <tr>
      <th>Organization</th>
      <td><%= @vote.organization %></td>
    </tr>
    <tr>
      <th>Session</th>
      <td><%= @vote.session %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= @vote.date %></td>
    </tr>
    <tr>
      <th>Quorum</th>
      <td><%= @vote.quorum %></td>
    </tr>
    <tr>
      <th>Type</th>
      <td><%= @vote.vote_type %></td>
    </tr>
    <tr>
      <th>Stage</th>
      <td><%= @vote.stage %></td>
    </tr>
    <tr>
      <th>Result</th>
      <td><%= @vote.result %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <div class="col-md-4">
    <ul>
      <% @v_events_yes.each do |yes| %>
        <li><%= yes.person_id %> - <%= yes.option %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <ul>
      <% @v_events_no.each do |no| %>
        <li><%= no.person_id %> - <%= no.option %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <ul>
      <% @v_events_pair.each do |p| %>
        <li><%= p.person_id %> - <%= p.option %></li>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to 'Edit', edit_vote_path(@vote) %> |
<%= link_to 'Back', votes_path %>
