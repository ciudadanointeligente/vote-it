<h1>Listing vote_events</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Option</th>
      <th>Paired person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vote_events.each do |vote_event| %>
      <tr>
        <td><%= vote_event.person_hash["name"] %></td>
        <td><%= vote_event.option %></td>
        <td><%= vote_event.paired_person_id %></td>
        <td><%= link_to 'Show', vote_event %></td>
        <td><%= link_to 'Edit', edit_vote_event_path(vote_event) %></td>
        <td><%= link_to 'Destroy', vote_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

