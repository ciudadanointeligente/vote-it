<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Proyecto</th>
          <th>Votacion</th>
          <th>Si</th>
          <th>No</th>
          <th>Pareos</th>
          <th>Abst</th>
        </tr>
      </thead>
      <tbody>
        <% @last_votes.each do |v| %>
        <tr>
          <td>
            <%= v.date %>
          </td>
          <td>
            <a href="//congresoabierto.cl/proyectos/<%= v.bill %>" target="_blank"><%= v.bill %><i class="fa fa-external-link"></i></a>
          </td>
          <td>
            <%= link_to v do %>
              <%= v.subject %>
            <% end %>
          </td>
          <td><%= v.vote_events.select {|vote| vote['option'] == "si"}.count || 0 %></td>
          <td><%= v.vote_events.select {|vote| vote['option'] == "no"}.count || 0 %></td>
          <td><%= v.vote_events.select {|vote| vote['option'] == "pareo"}.count || 0 %></td>
          <td><%= v.vote_events.select {|vote| vote['option'] == "abstencion"}.count || 0 %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <div class="main-search-form">
      <form role="form" action="/vote_events">
        <div class="form-group input-group">
          <input type="text" class="form-control" id="q-vote" placeholder="buscar votación">
          <span class="input-group-addon"><fa class="fa fa-search"></fa></span>
        </div>
      </form>
      <form role="form" action="/votes">
        <div class="form-group">
          <%= select_tag(:party_id, options_for_select(party_list), prompt: "Votaciones por Partido o Coalisión", class: "form-control", :onchange => "this.form.submit()") %>
        </div>
      </form>
      <form role="form" action="/vote_events">
        <div class="form-group">
          <%= select_tag(:person_id, options_for_select(parliamentarian_list), prompt: "Votaciones por Parlamentario", class: "form-control", :onchange => "this.form.submit()") %>
        </div>
        <button type="submit" class="btn btn-default">Buscar</button>
      </form>
    </div>
